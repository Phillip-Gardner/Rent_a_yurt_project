<div class="yurt-index">
  <div class="yurts-container">
  <div class="row align-items-center">
    <% @yurts.each do |yurt| %>
    <div class="col-12">
      <div class="yurt-card">

        <div class="yurt-card-image">
          <% if yurt.photo.attached? %>
            <%= cl_image_tag yurt.photo.key, width: 240, height: 240, crop: :fill %>
          <% else %>
            <p>No image attached</p>
          <% end %>
        </div>

        <div class="yurt-card-body">
          <h5 class="card-title"><%= yurt.title %></h5>
          <p class="card-location"><%= yurt.location %></p>
          <p class="card-descrirption"><%= yurt.description %></p>
          <p class="card-text">Max Capacity: <%= yurt.max_capacity %></p>
          <div class="yurt-rate">
            <p>Day rate: Â£<%= yurt.day_rate %>
          </div>
        </div>


        <div class="yurt-link">
          <p><%= link_to 'More info', yurt_path(yurt.id) %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  </div>


  <div class="map-container">
    <div class="map">
    </div>
  </div>


</div>
