<div class="yurt-index">
    <div class="yurts-container">
      <div class="row">
        <% @yurts.each do |yurt| %>
          <div class="col-12">
            <div class="yurt-card">
              <% if yurt.photo.attached? %>
                <%= cl_image_tag yurt.photo.key, class: 'yurt-card-image', crop: :fill %>
              <% else %>
                <div style="width: 240px, height: 240px">
                    <i class="fas fa-square"></i>
                    <p>No photo attached</p>
                </div>
              <% end %>
              <div class="yurt-card-body">
                <h5 class="card-title"><%= yurt.title %></h5>
                <div class="card-location"><%= yurt.location %></div>
                <div class="card-description"><%= yurt.description %></div>
                <div class="detailsholder">
                  <div class="yurt-details">
                    <div class="card-text">Max Capacity: <%= yurt.max_capacity %></div>
                    <div class="day-rate"> Day rate: Â£<%= yurt.day_rate %></div>
                  </div>
                  <div class="yurt-link" >
                    <%= link_to 'More info', yurt_path(yurt.id), class: "button" %>
                  </div>
                </div>
              </div>

            </div>
          </div>
        <% end %>
      </div>
    </div>

  <div class="map-container">
    <div id="map"
      style="width: 100%; height: 100vh;"
      data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>
