<div class="container">
  <div class="row">
    <div class="card">
      <div id="yurt-image">
        <% if @yurt.photo.attached? %>
          <%= cl_image_tag @yurt.photo.key, height: 300, width: 400, crop: :fill %>
        <% else %>
          <p>No image attached</p>
        <% end %>
      </div>
      <h2><%= @yurt.title %></h2>
      <%= link_to edit_yurt_path @yurt do %>
        <i class="fas fa-edit"></i>
      <% end %>
      <%= link_to 'delete', yurt_path(@yurt.id), method: :delete, data: { confirm: 'Are you sure?' } %>
      <div id="yurt-info">
        <h4><%= @yurt.description %></h4>
        <p>Max Capacity: <%= @yurt.max_capacity %></p>
        <p>Location: <%= @yurt.location %></p>
        <p>Day rate: <%= @yurt.day_rate %></p>
        <p>Host: <%= @yurt.user.email %></p>
      </div>
    </div>
    <p><%= link_to 'Back', yurts_path %></p>
  </div>
</div>

