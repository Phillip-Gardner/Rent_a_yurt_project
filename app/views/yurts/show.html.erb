<div class="show-page">


  <div class="yurt-container col-6">
      <div class="show-card">
        <div id="yurt-image">
          <% if @yurt.photo.attached? %>
            <%= cl_image_tag @yurt.photo.key, class:"yurt-image", height: 400, crop: :fill %>
          <% else %>
            <p>No image attached</p>
          <% end %>
        </div>
        <div class="yurt-card-text">
          <div class="yurt-title"><h2><%= @yurt.title %></h2></div>
          <div id="yurt-info">
            <div class="location"><p><%= @yurt.location %></p></div>
            <div class="description"><h4><%= @yurt.description %></h4></div>
            <div class="capacity-cost">
              <div class="capacity"><p>Max Capacity: <%= @yurt.max_capacity %></p></div>
              <div class="day-rate"><p>Day rate: Â£<%= @yurt.day_rate %></p></div>
            </div>

            <div class="host-email"><p>Host: <%= @yurt.user.email %></p></div>
          </div>

          <div class="show-links">
           <%= link_to 'Book this yurt', new_yurt_booking_path(@yurt), class:"button" %>
          </div>
        </div>
      </div>

      <div class="yurt-host-edit">
        <div class="edit-links">
          <h5>Yurt Host actions:</h5>
          <div class="yurt-edit">
            <%= link_to edit_yurt_path @yurt do %>
              Update yurt details <i class="fas fa-edit"></i>
            <% end %>
          </div>
          <div class="yurt-delete">
            <%= link_to 'Delete your yurt', yurt_path(@yurt.id), method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
    </div>
  </div>

  <div class="map-container">
    <div id="map"
      style="width: 100%; height: 100vh;"
      data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>


</div>
