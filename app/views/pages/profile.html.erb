

<h3>Your Yurts</h3>

<div class="row">
  <% if @yurts.nil? %>
    <p>You don't have any yurts.</p>
    <%= link_to 'Add a yurt', new_yurt  %>
  <% else %>
    <% @yurts.each do |yurt| %>
      <div class="column">
        <div class="yurt-card-small">
          <% if yurt.photo.attached? %>
            <%= cl_image_tag yurt.photo.key, width: 240, height: 240, crop: :fill %>
          <% else %>
            <p>No image attached</p>
          <% end %>

          <div class="yurt-card-info">
            <h3><%= yurt.title %></h3>
            Sleeps <%= yurt.max_capacity %>
            <div class="yurt-card-info-inline">
              Â£<%= yurt.day_rate %> / night

              <%= link_to yurt_path(yurt) do  %>
                More Info
              <% end %>
            </div>
          </div>


        </div>
      </div>
    <% end %>
  <% end %>
</div>


<div class="container">

  <div>
    <div>
      <div class = "profile-page-header">
        <h3>Your Yurt Listings</h3>
      </div>
      <div>
        Listings
      </div>
    </div>
  </div>

  <div>
    <div>
      <div class="profile-page-header">
        <h3>Your Bookings</h3>
      </div>
      <div>
        <div class="bookings">
          <div class="row">
            <% @bookings.each do |booking| %>
            <div class="column">
              <div class="card" id="booking-card">
                <p>From <%= booking.booked_from %> Until <%= booking.booked_to %></p>
                <% if booking.yurt.photo.attached? %>
                  <%= cl_image_tag booking.yurt.photo.key, width: 240, height: 240, crop: :fill %>
                <% else %>
                  <p>No image attached</p>
                <% end %>
                <p><%= booking.yurt.title %></p>
                <button type="button" class="btn"><%= link_to 'View booking details', booking_path(booking.id) %></button>
              </div>
            </div>
          <% end %>
        </div>
        </div>
      </div>
    </div>
  </div>


  <div>
    <div>
      <div class="profile-page-header">
        <h3>Your Profile Information</h3>
      </div>
      <div class = "container">
          <p>Email: <%= @user.email %></p>
          <p>First name: <%= @user.first_name %></p>
          <p>Last name: <%= @user.last_name %></p>
          <%= link_to edit_user_registration_path do %>
            <i class="fas fa-edit"></i><p>Edit info</p>
          <% end %>
      </div>
    </div>
  </div>

</div>



















