<div class="bookings">
  <h1>Your Bookings:</h1>
    <div class="row">
      <div class="col-sm-12">
        <% @bookings.each do |booking| %>
          <h2><%= booking.yurt.title %></h2>
          <ul>
            <li><%= booking.yurt.description %></li>
            <li><%= booking.booked_from %> - <%= booking.booked_to %></li>
          </ul>
          <p><%= link_to 'View booking details', booking_path(booking.id) %></p>
          <p><%= link_to "Delete",
            booking_path(booking),
            method: :delete,
            data: { confirm: "Are you sure?" } %></p>
        <% end %>
      </div>
  </div>
</div>


